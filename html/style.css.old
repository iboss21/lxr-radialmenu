* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    overflow: hidden;
    background: transparent;
}

#radial-menu-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: opacity 0.3s ease;
}

#radial-menu-container.hidden {
    display: none;
    opacity: 0;
}

#center-indicator {
    position: absolute;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.9);
    border: 3px solid var(--primary-color, #3498db);
    box-shadow: 0 0 20px rgba(52, 152, 219, 0.5),
                inset 0 0 20px rgba(52, 152, 219, 0.2);
    z-index: 100;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32px;
    transition: all 0.3s ease;
}

#center-indicator::before {
    content: '⚙️';
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
        opacity: 0.8;
    }
    50% {
        transform: scale(1.1);
        opacity: 1;
    }
}

.menu-item {
    position: absolute;
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: var(--bg-color, rgba(0, 0, 0, 0.8));
    border: 2px solid var(--primary-color, #3498db);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
    opacity: 0;
    transform: scale(0);
    animation: menuItemAppear 0.5s ease forwards;
}

@keyframes menuItemAppear {
    0% {
        opacity: 0;
        transform: scale(0) translateX(var(--tx, 0)) translateY(var(--ty, 0));
    }
    50% {
        transform: scale(1.2) translateX(var(--tx, 0)) translateY(var(--ty, 0));
    }
    100% {
        opacity: 1;
        transform: scale(1) translateX(var(--tx, 0)) translateY(var(--ty, 0));
    }
}

.menu-item:hover {
    background: var(--hover-color, #2ecc71);
    border-color: var(--hover-color, #2ecc71);
    transform: scale(1.15) translateX(var(--tx, 0)) translateY(var(--ty, 0)) !important;
    box-shadow: 0 6px 25px rgba(46, 204, 113, 0.6);
    z-index: 10;
}

.menu-item-icon {
    font-size: 28px;
    margin-bottom: 2px;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.5));
}

.menu-item-label {
    font-size: 10px;
    color: var(--text-color, #ffffff);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
}

.submenu-item {
    position: absolute;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--bg-color, rgba(0, 0, 0, 0.8));
    border: 2px solid var(--primary-color, #3498db);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
    opacity: 0;
    transform: scale(0);
    animation: submenuItemAppear 0.4s ease forwards;
}

@keyframes submenuItemAppear {
    0% {
        opacity: 0;
        transform: scale(0) translateX(var(--tx, 0)) translateY(var(--ty, 0));
    }
    100% {
        opacity: 1;
        transform: scale(1) translateX(var(--tx, 0)) translateY(var(--ty, 0));
    }
}

.submenu-item:hover {
    background: var(--hover-color, #2ecc71);
    border-color: var(--hover-color, #2ecc71);
    transform: scale(1.15) translateX(var(--tx, 0)) translateY(var(--ty, 0)) !important;
    box-shadow: 0 6px 25px rgba(46, 204, 113, 0.6);
}

.submenu-item-label {
    font-size: 9px;
    color: var(--text-color, #ffffff);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
    margin-top: 3px;
}

#menu-title {
    position: absolute;
    top: 20px;
    background: rgba(0, 0, 0, 0.9);
    padding: 12px 24px;
    border-radius: 25px;
    border: 2px solid var(--primary-color, #3498db);
    color: var(--text-color, #ffffff);
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.3s ease;
}

#menu-title.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Framework Badge */
#menu-title::before {
    content: attr(data-framework);
    display: inline-block;
    padding: 4px 10px;
    margin-right: 10px;
    background: var(--primary-color, #3498db);
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .menu-item {
        width: 60px;
        height: 60px;
    }
    
    .menu-item-icon {
        font-size: 24px;
    }
    
    .menu-item-label {
        font-size: 9px;
    }
}

/* Custom scrollbar for potential future use */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.3);
}

::-webkit-scrollbar-thumb {
    background: var(--primary-color, #3498db);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--hover-color, #2ecc71);
}
